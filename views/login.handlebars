<div class="card login-form mt-5">
    <h3 class="card-header">Login</h3>
    <form id="login-form" class="card-body">
        <div class="mb-3">
            <label for="email-login" class="form-label">Email</label>
            <input id="email-login" type="email" class="form-control" placeholder="Enter your email">
        </div>

        <div class="mb-3">
            <label for="password-login" class="form-label">Password</label>
            <input id="password-login" type="password" class="form-control" placeholder="Enter your password">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <p class="mt-3">Don't have an account? <a class="login-link" href="/signup">Sign-Up Here</a></p>
    </form>
</div>
<script src="/js/login.js"></script>
